<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="@dimen/padd_6"
        android:layout_height="@dimen/padd_120"
        android:elevation="@dimen/cardview_default_elevation"
        app:cardCornerRadius="@dimen/cardview_default_radius">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_feature_img"
                android:layout_width="@dimen/padd_90"
                android:layout_height="@dimen/padd_90"
                android:layout_margin="@dimen/padd_4"
                android:src="@mipmap/ic_launcher" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padd_6">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Title"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="@dimen/size_14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_title"
                    android:layout_marginTop="@dimen/padd_4"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="desc"
                    android:textSize="@dimen/size_12sp" />

                <TextView
                    android:id="@+id/tv_article_type_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_description"
                    android:layout_marginTop="@dimen/padd_4"

                    android:textSize="@dimen/size_12sp"
                    android:text="@string/article_type" />

                <TextView
                    android:id="@+id/tv_article_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size_12sp"
                    android:layout_below="@id/tv_description"
                    android:layout_marginLeft="@dimen/padd_4"
                    android:layout_marginTop="@dimen/padd_4"
                    android:layout_toRightOf="@+id/tv_article_type_text"
                    android:text="type" />

                <TextView
                    android:id="@+id/tv_published_on"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_article_type"
                    android:layout_marginTop="@dimen/padd_4"
                    android:textSize="@dimen/size_12sp"
                    android:textStyle="italic" />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>